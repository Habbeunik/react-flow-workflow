{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ES6"],
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "dist",
		"strict": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "src",
		"importHelpers": false,
		"allowImportingTsExtensions": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"incremental": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.tsx",
		"**/*.test.ts"
	]
}
