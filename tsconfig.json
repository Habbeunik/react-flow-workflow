{
	"compilerOptions": {
		"target": "es2015",
		"module": "esnext",
		"lib": ["dom", "es2015", "es2016", "es2017"],
		"jsx": "react",
		"declaration": true,
		"declarationDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "src",
		"importHelpers": false
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.tsx",
		"**/*.test.ts"
	]
}
