{
	"name": "react-flow-workflow",
	"version": "0.6.5",
	"description": "A powerful React hook for building interactive workflow diagrams with React Flow",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "rollup -c && npm run build:types",
		"build:types": "tsc --declaration --declarationDir dist --outDir dist --emitDeclarationOnly",
		"test": "jest",
		"lint": "eslint src/**/*.{ts,tsx}",
		"clean": "rimraf dist",
		"prepare": "npm run clean && npm run build",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"keywords": [
		"react",
		"react-flow",
		"workflow",
		"diagram",
		"node-based",
		"hook",
		"typescript"
	],
	"author": "Abbey Kumapayi <abbeykumapayi@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/habbeunik/react-flow-workflow.git"
	},
	"bugs": {
		"url": "https://github.com/habbeunik/react-flow-workflow/issues"
	},
	"homepage": "https://github.com/habbeunik/react-flow-workflow#readme",
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0",
		"reactflow": ">=11.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-typescript": "^11.0.0",
		"@testing-library/jest-dom": "^6.0.0",
		"@testing-library/react": "^14.0.0",
		"@types/dagre": "^0.7.52",
		"@types/react": "^18.0.0 || ^19.0.0",
		"@types/react-dom": "^18.0.0 || ^19.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.0.0",
		"jest": "^29.0.0",
		"rimraf": "^5.0.0",
		"rollup": "^4.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@dagrejs/dagre": "^1.1.4",
		"dagrejs": "^0.2.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	}
}
